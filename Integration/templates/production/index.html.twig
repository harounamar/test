{% extends 'base.html.twig' %}

{% block title %}Production index{% endblock %}

{% block body %}
    {% block css %}
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link rel="stylesheet" href="{{ asset('css/responsive.css') }}">
        <link rel="stylesheet" href="{{ asset('css/jquery.mCustomScrollbar.min.css') }}">

        <style>
            h1.catalogue-title {
                text-align: center; /* Centrer le texte */
                color: #006400; /* Appliquer la couleur verte */
            }

            /* Appliquer la couleur verte aux en-têtes de la table */
            .table th {
                background-color: #006400;
                color: white;
            }

            .table td {
                color: #006400; /* Couleur verte pour les données */
            }

            .table.mb-3 {
                margin-bottom: 1rem; /* Ajuster l'espacement si nécessaire */
            }

            /* Styles pour le bouton */
            .btn-green {
                display: inline-block;
                background-color: #006400; /* Couleur verte */
                color: white;
                padding: 10px 20px;
                text-align: center;
                border-radius: 5px;
                text-decoration: none; /* Supprimer la soulignure du lien */
                font-weight: bold;
                transition: background-color 0.3s ease;
            }

            .btn-green:hover {
                background-color: #004d00; /* Couleur verte plus foncée au survol */
            }
        </style>

    {% endblock css %}
    <div class="container mt-5">
        <h1 class="mb-4">Production Index</h1>

        <!-- Table -->
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">DateProd</th>
                    <th scope="col">Type</th>
                    <th scope="col">QuantiteProd</th>
                    <th scope="col">QualiteProd</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for production in productions %}
                <tr>
                    <td>{{ production.id }}</td>
                    <td>{{ production.dateProd ? production.dateProd|date('Y-m-d') : '' }}</td>
                    <td>{{ production.type }}</td>
                    <td>{{ production.quantiteProd }}</td>
                    <td>{{ production.qualiteProd }}</td>
                    <td>
                        <a href="{{ path('app_production_show', {'id': production.id}) }}" class="btn btn-success btn-sm">Show</a>
                        <a href="{{ path('app_production_edit', {'id': production.id}) }}" class="btn btn-success btn-sm">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <!-- Create New Button -->
        <a href="{{ path('app_production_new') }}" class="btn btn-success">Create New</a>
    </div>
{% endblock %}