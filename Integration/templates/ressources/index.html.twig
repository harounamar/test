{% extends 'base.html.twig' %}

{% block title %}Ressources Index{% endblock %}


 

{% block body %}



 {% block css %}
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link rel="stylesheet" href="{{ asset('css/responsive.css') }}">
        <link rel="stylesheet" href="{{ asset('css/jquery.mCustomScrollbar.min.css') }}">

        <style>
            h1.catalogue-title {
                text-align: center; /* Centrer le texte */
                color: #006400; /* Appliquer la couleur verte */
            }

            /* Appliquer la couleur verte aux en-têtes de la table */
            .table th {
                background-color: #006400;
                color: white;
            }

            .table td {
                color: #006400; /* Couleur verte pour les données */
            }

            .table.mb-3 {
                margin-bottom: 1rem; /* Ajuster l'espacement si nécessaire */
            }

            /* Styles pour le bouton */
            .btn-green {
                display: inline-block;
                background-color: #006400; /* Couleur verte */
                color: white;
                padding: 10px 20px;
                text-align: center;
                border-radius: 5px;
                text-decoration: none; /* Supprimer la soulignure du lien */
                font-weight: bold;
                transition: background-color 0.3s ease;
            }

            .btn-green:hover {
                background-color: #004d00; /* Couleur verte plus foncée au survol */
            }
        </style>

    {% endblock css %}



    <div class="container mt-5">
        <h1 class="text-center mb-4 ressources-title">Ressources Index</h1>

 <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>QuantiteDisponible</th>
                <th>DateAjout</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ressource in ressources %}
            <tr>
                <td>{{ ressource.id }}</td>
                <td>{{ ressource.getTypeAsString }}</td>
                <td>{{ ressource.quantiteDisponible }}</td>
                <td>{{ ressource.dateAjout ? ressource.dateAjout|date('Y-m-d') : '' }}</td>
              <td class="d-flex gap-2 align-items-center">
    <a href="{{ path('app_ressources_show', {'id': ressource.id}) }}" class="btn btn-success btn-sm">Afficher</a>
    <a href="{{ path('app_ressources_edit', {'id': ressource.id}) }}" class="btn btn-success btn-sm">Modifier</a>
    <form method="post" action="{{ path('ressources_delete', {'id': ressource.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette ressource ?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ressource.id) }}">
        <button type="submit" class="btn btn-success btn-sm">Supprimer</button>
    </form>
</td>
                

            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <div class="text-center mt-4">
            <a href="{{ path('app_ressources_new') }}" class="btn btn-success">Ajouter</a>
        </div>
    </div>
{% endblock %}